<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.mcnsa</groupId>
  <artifactId>notepad</artifactId>
  <version>1.0b-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>MCNSANotepad</name>
  <url>https://github.com/MCNSA/MCNSANotepad</url>

  <build>
    <finalName>MCNSANotepad</finalName>
    <resources>
      <resource>
        <directory>resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>1.4.7-R1.0</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/bukkit-1.4.7-R1.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>craftbukkit</artifactId>
      <version>1.4.7-R1.0</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/craftbukkit-1.4.7-R1.0.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>ru.tehkode</groupId>
      <artifactId>PermissionsEx</artifactId>
      <version>1.19.4</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/PermissionsEx.jar</systemPath>
    </dependency>
  </dependencies>
</project>
